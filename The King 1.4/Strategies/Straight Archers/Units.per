;Economic units

    (defrule
        (unit-type-count villager < MAX-VILLAGERS)
        (can-train villager)
    =>
        (train villager)
    )

    (defrule
        (unit-type-count villager >= MAX-VILLAGERS)
        (player-in-game any-ally)
        (unit-type-count trade-cart < 30)
        (can-train trade-cart)
    =>
        (train trade-cart)
    )

;Military

(defrule
	(unit-type-count archer-line < MAX-MILITARY)
	(current-age == feudal-age)
	(can-train archer-line)
=>
	(train archer-line)
)

(defrule
	(unit-type-count archer-line < MAX-MILITARY)
	(current-age == castle-age)
	(or (goal SKIRMISHERS NO) (research-completed ri-elite-skirmisher))
	(research-completed ri-crossbow)
	(can-train archer-line)
=>
	(train archer-line)
)

(defrule
	(unit-type-count archer-line < MAX-MILITARY)
	(current-age == imperial-age)
	(or (goal SKIRMISHERS NO) (research-completed ri-elite-skirmisher))
	(research-completed ri-arbalest)
	(can-train archer-line)
=>
	(train archer-line)
)


