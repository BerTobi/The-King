(defrule
	(goal PIKEMEN YES)
	(can-train spearman-line)
	(current-age == feudal-age)
	(unit-type-count spearman-line < 5)
	(and (can-afford-unit villager) (not(can-train villager)))
	(goal HALT-PRODUCTION NO)
=>
	(train spearman-line)
)

